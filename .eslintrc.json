{
	"env": {
		"node": true,
		"mongo": true,
		"es2021": true
	},
	"extends": ["standard"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "never"],
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"comma-dangle": ["error", "always-multiline"]
	}
}
